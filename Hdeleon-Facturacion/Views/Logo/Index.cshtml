@model Hdeleon_Facturacion.Models.ViewModels.LogoViewModel
@{
    ViewBag.Title = "Logotipo";
    Random r = new Random();
    string a = r.Next().ToString();
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-md-12 text-danger">
        @ViewBag.Error
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}



@using (Html.BeginForm("Save", "Logo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 offset-md-3">
           
            <div style="text-align:center;">
                <img style="max-height:300px; max-width:300px;" src="~/@Html.Raw(Hdeleon_Facturacion.Business.Constants.PathLogo)?a=@a" />

            </div>
            <br />
            <div class="form-group">
                *@Html.LabelFor(d => d.Logo)
                @Html.TextBoxFor(d => d.Logo, new { @class = "form-control", type = "file", accept = ".png,.jpg" })
                @Html.ValidationMessageFor(d => d.Logo, "", new { @class = "text-danger" })
            </div>
            
            <div class="form-group dt-right">
                <div class="col-md-12" style="text-align:right;">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

}
