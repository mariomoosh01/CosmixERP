@model Hdeleon_Facturacion.Models.ViewModels.PasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<h2>@ViewBag.Title</h2>

<hr />

<div class="row">
    <div class="col-md-12 text-danger">
        @ViewBag.Error
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@using (Html.BeginForm("Save", "Password", FormMethod.Post, new { id = "frm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div class="form-group">
                *@Html.LabelFor(d => d.Password)
                @Html.PasswordFor(d => d.Password, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(d => d.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                *@Html.LabelFor(d => d.Password2)
                @Html.PasswordFor(d => d.Password2, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(d => d.Password2, "", new { @class = "text-danger" })
            </div>
           
            <br />
            <div class="form-group dt-right">
                <div class="col-md-12" style="text-align:right;">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

}


